    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "import_crashes list",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/import_crashes",
            "console": "integratedTerminal",
            "args": ["--list"],
            "justMyCode": false
        },
        {
            "name": "import_crashes upload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/import_crashes",
            "console": "integratedTerminal",
            "args": ["~/Downloads/7327811d-a682-49f5-bb00-008d7673ef44.dmp"],
            "justMyCode": false
        },
       
        {
            "name": "GUnicorn: Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/gunicorn",
            "cwd": "${workspaceFolder}/app",
            "justMyCode": false,
            "args": ["app:application",
                "--bind=0.0.0.0:8000", "--reload", "--timeout", "300",
                "--log-level", "debug",
                "--env", "BASE_PATH=/crashupload",
            ],
            "envFile": "${workspaceFolder}/.env",
            //"postDebugTask": "killdebugger"
        },
        {
            "name": "GUnicorn: Release",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/gunicorn",
            "cwd": "${workspaceFolder}/app",
            "justMyCode": false,
            "args": ["app:application",
                "--bind=0.0.0.0:8000", "--reload", "--timeout", "300",
                "--log-level", "debug",
                "--env", "BASE_PATH=/crashupload",
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "GUNICORN_DEBUG": "0",
            }
            //"postDebugTask": "killdebugger"
        },
        {
            "name": "Python: manage.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "runserver"
            ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "django": true
        }
    ]
}